<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/design_default_color_secondary_variant">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/c1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="MemoryTron"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@id/imageView5"
            app:layout_constraintTop_toTopOf="@id/imageView5"
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/vidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vidas: 3"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@id/f1"
            app:layout_constraintEnd_toEndOf="@+id/f2">

        </TextView>

        <LinearLayout
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/f1c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f1c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f1c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/f1"
            android:gravity="center">

            <ImageView
                android:id="@+id/f2c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f2c2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f2c3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/f2"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/f3c1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f3c2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f3c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/f3"
            app:layout_constraintHorizontal_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/f4c1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f4c2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/f4c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/c1" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIAR PARTIDA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mesa"
        android:layout_marginTop="30dp">
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>